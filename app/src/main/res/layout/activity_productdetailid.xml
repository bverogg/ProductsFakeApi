<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:background="#eaeaea"
        android:padding="8dp"
        android:layout_marginBottom="60dp">

        <ImageView
            android:paddingTop="10dp"
            android:id="@+id/image_logo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_pokemon_name"
            android:textSize="32sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:text="FakeStore"
            android:paddingRight="85dp"
            android:fontFamily="sans-serif-black"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Inicio"
            android:background="@color/black"
            android:id="@+id/boton_inicio"
            android:layout_marginTop="5dp"
            />
        <!--<ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/image_inicio_link"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/pngwing_com"
            />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="#ffffff"
        android:paddingTop="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_product_name"
            android:textSize="30sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:text="Nombre del producto"
            />
        <ImageView
            android:id="@+id/image_product"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/intro" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_product_category"
            android:textSize="24sp"
            android:textColor="@color/azul"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="16dp"
            android:text="Categoría" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titulo_precio"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:text="Precio:"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_product_price"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:text="$0.00"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_title_description"
            android:textSize="18sp"
            android:textColor="@color/morado"
            android:layout_marginTop="16dp"
            android:text="Descripción del producto"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_product_description"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:text="Esta es la descripción del producto"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Regresar"
            android:background="@color/black"
            android:id="@+id/boton_send"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
</LinearLayout>

