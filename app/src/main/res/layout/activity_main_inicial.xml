<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:background="#eaeaea"
        android:padding="8dp"
        android:layout_marginBottom="60dp">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_pokemon_name"
            android:textSize="32sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:text="FakeStore"
            android:fontFamily="sans-serif-black"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="#ffffff"
        android:paddingTop="0dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo1"
            android:textSize="22sp"
            android:textColor="@color/azul"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:text="Coloca un id de producto \n y da click en buscar" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_precio"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="22dp"
            android:fontFamily="sans-serif-black"
            android:text="(Entre 1 y 20)"
            />
        <EditText
            android:id="@+id/valorid"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:hint="@string/valor_id"
            android:autofillHints=""
            android:textSize="20sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Ver Producto"
            android:background="@color/black"
            android:id="@+id/boton_verproducto"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo2"
            android:textSize="22sp"
            android:textColor="@color/azul"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:text="Coloca un rango de ids de productos y da click  en buscar" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo_entre2"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="22dp"
            android:fontFamily="sans-serif-black"
            android:text="(Entre 1 y 20)"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#ffffff"
            android:paddingTop="0dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:layout_marginBottom="100dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/valorid_desde"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:hint="@string/valor_id_desde"
                android:autofillHints=""
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/valorid_hasta"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:hint="@string/valor_id_hasta"
                android:autofillHints=""
                android:layout_margin="10dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Ver Productos"
            android:background="@color/black"
            android:id="@+id/boton_verproductos"
            android:layout_marginTop="0dp"
            />

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/intro"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>

